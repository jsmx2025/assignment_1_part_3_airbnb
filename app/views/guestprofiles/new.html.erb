<!-- Validation failure messages -->
<% if @guestprofile.errors.any? %>
  <% @guestprofile.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Guestprofile</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_guestprofile" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for guest_id -->
      <div class="form-group">
        <label for="guest_id" class="control-label">
          Guest
        </label>

        <%= select_tag(:guest_id, options_from_collection_for_select(UserGuest.all, :id, :created_at, @guestprofile.guest_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Guestprofile
      </button>
      or
      <a href="/guestprofiles">Cancel</a>
    </form>
  </div>
</div>
