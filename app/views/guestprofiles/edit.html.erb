<!-- Validation failure messages -->
<% if @guestprofile.errors.any? %>
  <% @guestprofile.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Guestprofile #<%= @guestprofile.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_guestprofile/<%= @guestprofile.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for guest_id -->
      <div class="form-group">
        <label for="guest_id" class="control-label">
          Guest
        </label>

        <input type="text" id="guest_id" name="guest_id" placeholder="Guest" class="form-control" value="<%= @guestprofile.guest_id %>">
      </div>

      <button class="btn btn-warning">
        Update Guestprofile
      </button>
      or
      <a href="/guestprofiles/<%= @guestprofile.id %>">Cancel</a>
    </form>
  </div>
</div>
