<!-- Validation failure messages -->
<% if @hostprofile.errors.any? %>
  <% @hostprofile.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Hostprofile #<%= @hostprofile.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_hostprofile/<%= @hostprofile.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_host_id -->
      <div class="form-group">
        <label for="user_host_id" class="control-label">
          User host
        </label>

        <input type="text" id="user_host_id" name="user_host_id" placeholder="User host" class="form-control" value="<%= @hostprofile.user_host_id %>">
      </div>

      <button class="btn btn-warning">
        Update Hostprofile
      </button>
      or
      <a href="/hostprofiles/<%= @hostprofile.id %>">Cancel</a>
    </form>
  </div>
</div>
