<div class="page-header">
  <h3>Price #<%= @price.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Price per night</dt>
      <dd><%= @price.price_per_night %></dd>

      <dt>Availability</dt>
      <dd><%= @price.availability_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/prices" class="btn btn-primary">
        Back
      </a>
      <a href="/prices/<%= @price.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_price/<%= @price.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
