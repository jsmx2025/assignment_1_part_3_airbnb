<div class="page-header">
  <h1>
    User hosts
    <a href="/user_hosts/new" class="btn btn-lg btn-success">New User host</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @user_hosts.each do |user_host| %>
      <tr>
        <td><%= user_host.email %></td>
        <td><%= user_host.password %></td>
        <td>
          <a href="/user_hosts/<%= user_host.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
