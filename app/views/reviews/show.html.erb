<div class="page-header">
  <h3>Review #<%= @review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Content</dt>
      <dd><%= @review.content %></dd>

      <dt>Guest</dt>
      <dd>
        <% if @review.guest.present? %>
          <a href="/guestprofiles/<%= @review.guest_id %>">
            <%= @review.guest.guest_id %>
          </a>
        <% end %>
      </dd>

      <dt>Host</dt>
      <dd>
        <% if @review.host.present? %>
          <a href="/hostprofiles/<%= @review.host_id %>">
            <%= @review.host.user_host_id %>
          </a>
        <% end %>
      </dd>

      <dt>Booking</dt>
      <dd>
        <% if @review.booking.present? %>
          <a href="/bookings/<%= @review.booking_id %>">
            <%= @review.booking.guest_id %>
          </a>
        <% end %>
      </dd>

      <dt>Listing</dt>
      <dd>
        <% if @review.listing.present? %>
          <a href="/listings/<%= @review.listing_id %>">
            <%= @review.listing.title %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reviews" class="btn btn-primary">
        Back
      </a>
      <a href="/reviews/<%= @review.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_review/<%= @review.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
