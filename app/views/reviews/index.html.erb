<div class="page-header">
  <h1>
    Reviews
    <a href="/reviews/new" class="btn btn-lg btn-success">New Review</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Content</th>
        <th>Guest</th>
        <th>Host</th>
        <th>Booking</th>
        <th>Listing</th>
        <th>Actions</th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <td><%= review.content %></td>
        <td>
          <% if review.guest.present? %>
            <a href="/guestprofiles/<%= review.guest.id %>">
              <%= review.guest.guest_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if review.host.present? %>
            <a href="/hostprofiles/<%= review.host.id %>">
              <%= review.host.user_host_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if review.booking.present? %>
            <a href="/bookings/<%= review.booking.id %>">
              <%= review.booking.guest_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if review.listing.present? %>
            <a href="/listings/<%= review.listing.id %>">
              <%= review.listing.title %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/reviews/<%= review.id %>" class="btn btn-primary">Show</a>
          <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @reviews, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
