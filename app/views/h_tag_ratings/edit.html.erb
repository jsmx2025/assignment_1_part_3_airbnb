<!-- Validation failure messages -->
<% if @h_tag_rating.errors.any? %>
  <% @h_tag_rating.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit H Tag Rating #<%= @h_tag_rating.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_h_tag_rating/<%= @h_tag_rating.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for overall_rating -->
      <div class="form-group">
        <label for="overall_rating" class="control-label">
          Overall rating
        </label>

        <input type="text" id="overall_rating" name="overall_rating" placeholder="Overall rating" class="form-control" value="<%= @h_tag_rating.overall_rating %>">
      </div>

      <!-- Label and input for rating_id -->
      <div class="form-group">
        <label for="rating_id" class="control-label">
          Rating
        </label>

        <%= select_tag(:rating_id, options_from_collection_for_select(Rating.all, :id, :created_at, @h_tag_rating.rating_id), :class => "form-control") %>
      </div>

      <!-- Label and input for guest_id -->
      <div class="form-group">
        <label for="guest_id" class="control-label">
          Guest
        </label>

        <input type="text" id="guest_id" name="guest_id" placeholder="Guest" class="form-control" value="<%= @h_tag_rating.guest_id %>">
      </div>

      <button class="btn btn-warning">
        Update H Tag Rating
      </button>
      or
      <a href="/h_tag_ratings/<%= @h_tag_rating.id %>">Cancel</a>
    </form>
  </div>
</div>
