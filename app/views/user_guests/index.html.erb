<div class="page-header">
  <h1>
    User guests
    <a href="/user_guests/new" class="btn btn-lg btn-success">New User guest</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @user_guests.each do |user_guest| %>
      <tr>
        <td><%= user_guest.email %></td>
        <td><%= user_guest.password %></td>
        <td>
          <a href="/user_guests/<%= user_guest.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @user_guests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
