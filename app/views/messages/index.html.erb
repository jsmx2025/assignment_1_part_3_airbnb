<div class="page-header">
  <h1>
    Messages
    <a href="/messages/new" class="btn btn-lg btn-success">New Message</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Listing</th>
        <th>Guest</th>
        <th>Content</th>
        <th>Host</th>
        <th>Actions</th>
      </tr>

      <% @messages.each do |message| %>
      <tr>
        <td>
          <% if message.listing.present? %>
            <a href="/listings/<%= message.listing.id %>">
              <%= message.listing.title %>
            </a>
          <% end %>
        </td>
        <td>
          <% if message.guest.present? %>
            <a href="/guestprofiles/<%= message.guest.id %>">
              <%= message.guest.guest_id %>
            </a>
          <% end %>
        </td>
        <td><%= message.content %></td>
        <td>
          <% if message.host.present? %>
            <a href="/hostprofiles/<%= message.host.id %>">
              <%= message.host.user_host_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/messages/<%= message.id %>" class="btn btn-primary">Show</a>
          <a href="/messages/<%= message.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_message/<%= message.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @messages, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
