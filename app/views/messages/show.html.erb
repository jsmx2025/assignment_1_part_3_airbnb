<div class="page-header">
  <h3>Message #<%= @message.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Listing</dt>
      <dd>
        <% if @message.listing.present? %>
          <a href="/listings/<%= @message.listing_id %>">
            <%= @message.listing.title %>
          </a>
        <% end %>
      </dd>

      <dt>Guest</dt>
      <dd>
        <% if @message.guest.present? %>
          <a href="/guestprofiles/<%= @message.guest_id %>">
            <%= @message.guest.guest_id %>
          </a>
        <% end %>
      </dd>

      <dt>Content</dt>
      <dd><%= @message.content %></dd>

      <dt>Host</dt>
      <dd>
        <% if @message.host.present? %>
          <a href="/hostprofiles/<%= @message.host_id %>">
            <%= @message.host.user_host_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/messages" class="btn btn-primary">
        Back
      </a>
      <a href="/messages/<%= @message.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_message/<%= @message.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
