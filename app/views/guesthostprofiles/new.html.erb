<!-- Validation failure messages -->
<% if @guesthostprofile.errors.any? %>
  <% @guesthostprofile.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Guesthostprofile</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_guesthostprofile" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for host_id -->
      <div class="form-group">
        <label for="host_id" class="control-label">
          Host
        </label>

        <%= select_tag(:host_id, options_from_collection_for_select(UserHost.all, :id, :created_at, @guesthostprofile.host_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_guest_id -->
      <div class="form-group">
        <label for="user_guest_id" class="control-label">
          User guest
        </label>

        <%= select_tag(:user_guest_id, options_from_collection_for_select(UserGuest.all, :id, :created_at, @guesthostprofile.user_guest_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Guesthostprofile
      </button>
      or
      <a href="/guesthostprofiles">Cancel</a>
    </form>
  </div>
</div>
